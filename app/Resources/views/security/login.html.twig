{% extends "layout.html.twig" %}

{% block main_content %}

    <div class="container">
        <div class="card card-block">
            <h1 class="card-title">{%trans%}Login{%endtrans%}</h1>
            <div class="row">
                <div class="col-md-6">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        </div>
                    {% endif %}
                    <form class="form" action="{{ path('security_login') }}" method="post">
                        <div class="form-group">
                            <label class="form-label" for="username">Username:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="password">Password:</label>
                            <input class="form-control" type="password" id="password" name="_password" />
                        </div>
                        <input type="hidden" name="_target_path" value="{{app.request.getUri}}" />
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">login</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    logarse con google, twitter, facebook, etc
                </div>
            </div>
        </div>
    </div>
{% endblock %}
